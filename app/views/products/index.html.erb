<% @store_products.each do |store_product| %>
  <% @new_array = [] %>
  <% @stores.map do |store|  %>
    <% if store_product.store == store %>
      <% @new_array << store %>
    <% end %>
  <% end %>
    <div class="main-card">
      <img class="product-img" src="https://images.unsplash.com/photo-1512621776951-a57141f2eefd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" alt="">
      <div class="product-info">
        <div class="product-details">
          <p class="product-name"><%= store_product.product.name %></p>
          <p class="store-name">
            <select class="edit-box">
            <% @new_array.each do |new_store| %>
              <option><%= new_store.name %></option>
              <% end %>
            </select>

        </p>
        </div>
        <%= image_tag "nutriscore-a.svg" %>
        <i class="fas fa-shopping-basket fa-2x"></i>
      </div>
    </div>
<% end %>



