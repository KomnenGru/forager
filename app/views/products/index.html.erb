<div id="map"
     style="width: 414px; height: 275px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<% @products.each do |product| %>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content p-3">
        <div class="modal-header row">
          <div class="back">
            <i class="fas fa-arrow-left" data-dismiss="modal"></i>
          </div>
          <div class="options">
            <i class="far fa-heart m-2"></i>
            <i class="fas fa-shopping-basket m-2"></i>
          </div>
        </div>
        <div class="modal-body">
          <div class="row border-bottom d-flex justify-content-between">
            <div class="col-10">
              <h1 class="modal-title"><%= product.name %></h1>
              <h2><%= product.brand %></h2>
            </div>
            <div class="d-flex align-items-center col-2">
              <h1><%= product.nutriscore %></h1>
            </div>
          </div>
          <div class="row justify-content-between">
            <% nutrition = JSON.parse(product.nutrition, symbolize_names: true) %>
            <div class="text-center">
              <ul class="chart-skills">
                <li><span></span></li>
                <li><span></span></li>
                <li><span></span></li>
              </ul>
              <h3><%= nutrition[:calories] %></h3>
              <p>cal</p>
            </div>
            <div class="text-center">
              <p style="color: blue"><%= ((nutrition[:carbohydrates][:total] * 4).fdiv(nutrition[:calories]) * 100).round %>%</p>
              <h3><%= nutrition[:carbohydrates][:total] %> g</h3>
              <p>carbs</p>
            </div>
            <div class="text-center">
              <p style="color: red"><%= ((nutrition[:fat][:total] * 4).fdiv(nutrition[:calories]) * 100).round %>%</p>
              <h3><%= nutrition[:fat][:total] %> g</h3>
              <p>fat</p>
            </div>
            <div class="text-center">
              <p style="color: purple"><%= ((nutrition[:protein] * 4).fdiv(nutrition[:calories]) * 100).round %>%</p>
              <h3><%= nutrition[:protein]%> g</h3>
              <p>protein</p>
            </div>
          </div>
          <div class="row justify-content-between bg-light p-2">
            <h3>Nutrition Facts</h3>
            <h3>per 100g</h3>
          </div>
          <% nutrition.each do |nutrient, value| %>
              <% if value.class == Hash %>
                <div class="row justify-content-between px-2">
                  <h4><%= nutrient.capitalize %></h4>
                  <h4><%= value.values.first %> g</h4>
                </div>
                <% value.except(:total).each do |subnutrient, grams| %>
                  <div class="row justify-content-between ml-1 px-2">
                    <h4 class="font-weight-light"><%= subnutrient.capitalize %></h4>
                    <% if grams.nil? %>
                      <h4 class="font-weight-light">-</h4>
                    <% else %>
                      <h4 class="font-weight-light"><%= grams %> g</h4>
                    <% end %>
                  </div>
                <% end %>
              <% else %>
                <div class="row justify-content-between px-2">
                  <h4><%= nutrient.capitalize %></h4>
                  <h4><%= value %> g</h4>
                </div>
              <% end %>
          <% end %>
          <div class="row mt-3">
            <h3>Ingredients</h3>
            <p class="p-2"><%= product.ingredients %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>









