<div class="bg-success text-white">
  <h1 class="p-2 text-center">Favorites</h1>
</div>
<% @favorites.each do |favorite| %>
<div class="favorite-card swiper-container">
  <div class="swiper-wrapper">

    <div class="swiper-slide">
      <div class="green-box">

      </div>
    </div>

    <div class="swiper-slide">
      <img class="product-img" src="https://images.unsplash.com/photo-1512621776951-a57141f2eefd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" alt="">
      <div class="favorite-name">
        <p><%= favorite.product.name %></p>
      </div>
    </div>

    <div class="swiper-slide">
      <div class="red-box">
        <%= link_to "Delete", favorite_path(favorite), method: :delete, class: "action" %>
      </div>
    </div>

  </div>
</div>
<% end %>

